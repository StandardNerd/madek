- content_for :head do
  = javascript_include_tag "redesign/pdf"
  = stylesheet_link_tag "redesign/pdf-viewer"
  %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1, maximum-scale=1"}
  = javascript_include_tag "redesign/pdf-viewer"

#outerContainer
  #sidebarContainer
    #toolbarSidebar
      .splitToolbarButton.toggled
        %button#viewThumbnail.toolbarButton.group.toggled{"data-l10n-id" => "thumbs", :tabindex => "1", :title => "Show Thumbnails"}
          %span{"data-l10n-id" => "thumbs_label"} Thumbnails
        %button#viewOutline.toolbarButton.group{"data-l10n-id" => "outline", :tabindex => "2", :title => "Show Document Outline"}
          %span{"data-l10n-id" => "outline_label"} Document Outline
    #sidebarContent
      #thumbnailView
      #outlineView.hidden
  / sidebarContainer
  #mainContainer
    #findbar.findbar.hidden.doorHanger
      %label.toolbarLabel{"data-l10n-id" => "find_label", :for => "findInput"} Find:
      %input#findInput.toolbarField{:tabindex => "20"}
        .splitToolbarButton
          %button#findPrevious.toolbarButton.findPrevious{"data-l10n-id" => "find_previous", :tabindex => "21", :title => ""}
            %span{"data-l10n-id" => "find_previous_label"} Previous
          .splitToolbarButtonSeparator
          %button#findNext.toolbarButton.findNext{"data-l10n-id" => "find_next", :tabindex => "22", :title => ""}
            %span{"data-l10n-id" => "find_next_label"} Next
        %input#findHighlightAll.toolbarField{:type => "checkbox"}
          %label.toolbarLabel{"data-l10n-id" => "find_highlight", :for => "findHighlightAll", :tabindex => "23"} Highlight all
          %input#findMatchCase.toolbarField{:type => "checkbox"}
            %label.toolbarLabel{"data-l10n-id" => "find_match_case_label", :for => "findMatchCase", :tabindex => "24"} Match case
            %span#findMsg.toolbarLabel
    .toolbar
      #toolbarContainer
        #toolbarViewer
          #toolbarViewerLeft
            %button#sidebarToggle.toolbarButton{"data-l10n-id" => "toggle_slider", :tabindex => "3", :title => "Toggle Sidebar"}
              %span{"data-l10n-id" => "toggle_slider_label"} Toggle Sidebar
            .toolbarButtonSpacer
            %button#viewFind.toolbarButton.group{"data-l10n-id" => "findbar", :tabindex => "4", :title => "Find in Document"}
              %span{"data-l10n-id" => "findbar_label"} Find
            .splitToolbarButton
              %button#previous.toolbarButton.pageUp{"data-l10n-id" => "previous", :tabindex => "5", :title => "Previous Page"}
                %span{"data-l10n-id" => "previous_label"} Previous
              .splitToolbarButtonSeparator
              %button#next.toolbarButton.pageDown{"data-l10n-id" => "next", :tabindex => "6", :title => "Next Page"}
                %span{"data-l10n-id" => "next_label"} Next
            %label#pageNumberLabel.toolbarLabel{"data-l10n-id" => "page_label", :for => "pageNumber"} Page:
            %input#pageNumber.toolbarField.pageNumber{:min => "1", :size => "4", :tabindex => "7", :type => "number", :value => "1"}
            %span#numPages.toolbarLabel
          #toolbarViewerRight
            %input#fileInput.fileInput{:oncontextmenu => "return false;", :style => "visibility: hidden; position: fixed; right: 0; top: 0", :type => "file"}/
            %button#fullscreen.toolbarButton.fullscreen{"data-l10n-id" => "presentation_mode", :tabindex => "11", :title => "Switch to Presentation Mode"}
              %span{"data-l10n-id" => "presentation_mode_label"} Presentation Mode
            %button#openFile.toolbarButton.openFile{"data-l10n-id" => "open_file", :tabindex => "12", :title => "Open File"}
              %span{"data-l10n-id" => "open_file_label"} Open
            %button#print.toolbarButton.print{"data-l10n-id" => "print", :tabindex => "13", :title => "Print"}
              %span{"data-l10n-id" => "print_label"} Print
            %button#download.toolbarButton.download{"data-l10n-id" => "download", :tabindex => "14", :title => "Download"}
              %span{"data-l10n-id" => "download_label"} Download
            / <div class="toolbarButtonSpacer"></div>
            %a#viewBookmark.toolbarButton.bookmark{"data-l10n-id" => "bookmark", :href => "#", :tabindex => "15", :title => "Current view (copy or open in new window)"}
              %span{"data-l10n-id" => "bookmark_label"} Current View
          .outerCenter
            #toolbarViewerMiddle.innerCenter
              .splitToolbarButton
                %button.toolbarButton.zoomOut{"data-l10n-id" => "zoom_out", :tabindex => "8", :title => "Zoom Out"}
                  %span{"data-l10n-id" => "zoom_out_label"} Zoom Out
                .splitToolbarButtonSeparator
                %button.toolbarButton.zoomIn{"data-l10n-id" => "zoom_in", :tabindex => "9", :title => "Zoom In"}
                  %span{"data-l10n-id" => "zoom_in_label"} Zoom In
              %span#scaleSelectContainer.dropdownToolbarButton
                %select#scaleSelect{"data-l10n-id" => "zoom", :oncontextmenu => "return false;", :tabindex => "10", :title => "Zoom"}
                  %option#pageAutoOption{"data-l10n-id" => "page_scale_auto", :selected => "selected", :value => "auto"} Automatic Zoom
                  %option#pageActualOption{"data-l10n-id" => "page_scale_actual", :value => "page-actual"} Actual Size
                  %option#pageFitOption{"data-l10n-id" => "page_scale_fit", :value => "page-fit"} Fit Page
                  %option#pageWidthOption{"data-l10n-id" => "page_scale_width", :value => "page-width"} Full Width
                  %option#customScaleOption{:value => "custom"}
                  %option{:value => "0.5"} 50%
                  %option{:value => "0.75"} 75%
                  %option{:value => "1"} 100%
                  %option{:value => "1.25"} 125%
                  %option{:value => "1.5"} 150%
                  %option{:value => "2"} 200%
    %menu#viewerContextMenu{:type => "context"}
      %menuitem#first_page{"data-l10n-id" => "first_page", :label => "First Page"}
      %menuitem#last_page{"data-l10n-id" => "last_page", :label => "Last Page"}
      %menuitem#page_rotate_ccw{"data-l10n-id" => "page_rotate_ccw", :label => "Rotate Counter-Clockwise"}
      %menuitem#page_rotate_cw{"data-l10n-id" => "page_rotate_cw", :label => "Rotate Clockwise"}
    #viewerContainer
      #viewer{:contextmenu => "viewerContextMenu"}
    #loadingBox
      #loading
      #loadingBar
        .progress
    #errorWrapper{:hidden => "true"}
      #errorMessageLeft
        %span#errorMessage
        %button#errorShowMore{"data-l10n-id" => "error_more_info", :onclick => "", :oncontextmenu => "return false;"}
          More Information
        %button#errorShowLess{"data-l10n-id" => "error_less_info", :hidden => "true", :onclick => "", :oncontextmenu => "return false;"}
          Less Information
      #errorMessageRight
        %button#errorClose{"data-l10n-id" => "error_close", :oncontextmenu => "return false;"}
          Close
      .clearBoth
      %textarea#errorMoreInfo{:hidden => "true", :readonly => "readonly"}
  / mainContainer
/ outerContainer
#printContainer

:coffeescript
  
  PDFJS.workerSrc = #{asset_path("redesign/vendor/mozilla-pdf.js/src/worker_loader.js").to_json}

  #document_path: "/media_files/#{@media_entry.media_file.id}?access_hash=#{@media_entry.media_file.access_hash}"