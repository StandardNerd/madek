:ruby
  is_favorite = current_user.favorite_ids.include?(media_resource.id)
.ui-thumbnail-actions
  %ul.left.by-left
    %li.ui-thumbnail-action
      %a.ui-thumbnail-action-checkbox{:title => "Zum Clipboard hinzufügen", :href => "#"}
        Zum Clipboard hinzufügen
    %li.ui-thumbnail-action
      %a.ui-thumbnail-action-favorite{:title => is_favorite ? "Von Favoriten entfernen" : "Zu Favoriten hinzufügen", :href => "#", :class => is_favorite ? "active" : ""}
        Zu Favoriten hinzufügen
  %ul.right.by-right
    %li.ui-thumbnail-action
      %a.ui-thumbnail-action-browse{:title => "Erkunden", :href => "#"}
        Erkunden
    - if editable
      %li.ui-thumbnail-action
        %a.ui-thumbnail-action-edit{:title => "Editieren", :href => edit_media_resource_path(media_resource)}
          Editieren
      %li.ui-thumbnail-action
        %a.ui-thumbnail-action-delete{:title => "Löschen", :href => "#"}
          Löschen
