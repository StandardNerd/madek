              %li.separator.mini
              %li.ui-side-navigation-item
                %a.strong{:href => "#"} Neue Inhalte
              %li.separator.mini
              %li.ui-side-navigation-item
                %a.strong{:href => "#"} H&auml;ufige Schlagworte
              %li.separator.mini

        .app-body-content.table-cell.table-substance.ui-container

          .ui-container.ptl.phl.pbm
