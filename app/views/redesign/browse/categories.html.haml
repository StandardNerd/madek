.app.view-katalog

  = render "application/header/logged_in"

  .app-body

    // PAGE TITLE

    .app-body-title
      .ui-body-title
        .ui-body-title-label
          %h1.title-xl Erkunden / Katalog

    .app-body-ui-container
      .bordered.ui-container.midtone.rounded.table

        // SIDEBAR

        .app-body-sidebar.bright.ui-container.table-cell.bordered-right.rounded-left.table-side
          .ui-container.rounded-left.phm.pvl
            %ul.ui-side-navigation
              %li.ui-side-navigation-item.active
                %a.strong{:href => "#"} Katalog
              %ul.ui-side-navigation-lvl2
                %li.ui-side-navigation-lvl2-item
                  %a.weak{:href => "#"} ZHdK Bereich
